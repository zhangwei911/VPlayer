<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/motionLayout_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    app:layoutDescription="@xml/fragment_home_new_scene"
    app:showPaths="false">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/appBarLayout"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:minHeight="60dp"
            app:collapsedTitleGravity="left"
            app:collapsedTitleTextAppearance="@style/ToolBarTitleText"
            app:expandedTitleGravity="left|top"
            app:expandedTitleTextAppearance="@style/ToolBarTitleTextBig"
            app:layout_scrollFlags="scroll|enterAlways|snap|exitUntilCollapsed"
            app:titleEnabled="false">

            <ImageView
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:focusable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_black"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />

            <TextView
                android:id="@+id/textView_label_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:fontFamily="monospace"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                android:text="@string/app_name"
                android:textColor="#FFF"
                android:textSize="32sp"
                app:layout_collapseMode="pin"
                />

            <TextView
                android:id="@+id/sublabel"
                android:layout_marginStart="32dp"
                android:layout_marginTop="72dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:text="player for you "
                android:textColor="#9C9C9C"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="1.0"
                android:textSize="24sp"
                app:fontFamily="cursive"/>

            <EditText
                android:id="@+id/editText_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"

                android:autofillHints="@string/search_hint"
                android:background="@drawable/search_bg"
                android:drawableStart="@drawable/ic_search_edit"
                android:drawablePadding="8dp"
                android:hint="@string/search_hint"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:fontFamily="monospace"
                android:textColorHint="#cccccc"
                android:layout_gravity="center"
                app:layout_collapseMode="pin"
                 />

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                app:layout_collapseMode="pin"
                android:layout_height="60dp">
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_behavior="viz.commonlib.CustomBehavior"
        app:layout_anchor="@id/appBarLayout"
        app:layout_anchorGravity="bottom|end"
        app:srcCompat="@android:drawable/ic_dialog_email" />

    <viz.vplayer.util.X5WebView
        android:id="@+id/webView_for_get_url"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff999"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <app.dinus.com.loadingdrawable.LoadingView
        android:id="@+id/loadingView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#2A77736A"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loading_renderer="SwapLoadingRenderer" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>