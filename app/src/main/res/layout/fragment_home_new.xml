<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/fragment_home_new_scene"
    android:background="#fff"
    android:id="@+id/motionLayout_home"
    app:showPaths="false">

    <viz.vplayer.util.X5WebView
        android:id="@+id/webView_for_get_url"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include layout="@layout/coordination_header_home" />

    <include layout="@layout/content_scrolling_home"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_web"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#fff999"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <app.dinus.com.loadingdrawable.LoadingView
        android:id="@+id/loadingView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#2A77736A"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loading_renderer="SwapLoadingRenderer" />

</androidx.constraintlayout.motion.widget.MotionLayout>